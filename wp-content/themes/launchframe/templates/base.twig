{% block html_head_container %}

{% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
	</head>
{% endblock %}

	<body class="{{body_class}} u-bg__img" data-template="base.twig" style="background-image: url('{{ theme.link }}/assets/src/img/bg.jpg');">
		<header class="site-header text-xs-center">
			<div class="logo">
				{% include '/assets/src/img/logo.svg' %}
			</div>
		</header>

		<main class="site-main">
			{% if title %}<h1>{{title}}</h1>{% endif %}
      <section class="primary-content">
				{% block content %}
					Sorry, no content
				{% endblock %}
      </section>
			{% if sidebar %}
				<aside class="layout-sidebar">
					{{sidebar}}
				</aside>
			{% endif %}
		</main>

		{% block footer %}
			<footer class="site-footer">
				{% include 'footer.twig' %}
			</footer>
			{{ function('wp_footer') }}
		{% endblock %}
	</body>
</html>
